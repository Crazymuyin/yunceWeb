<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <% include compoment/header %>
        <% include compoment/leftMenu %>
        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div style="padding: 15px;">
                <iframe class="layadmin-iframe" id="openWeb" name="openWeb" src="/admin/manager" frameborder="0" width="100%" height="100%"></iframe>
            </div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © 底部固定区域
        </div>
