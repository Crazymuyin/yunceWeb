    <script>
        layui.use(['jquery', 'element', 'layer'], function () {
            var element = layui.element;
            var $ = layui.jquery;
            var layer = layui.layer;

            $('#exit').click(function () {
                $.get('/public/logout', function (result) {
                    if (result) {
                        layer.msg('退出成功')
                        setTimeout(function () {
                            window.location.href = '/login'
                        }, 1500)
                    }
                })
            })
        });
    </script>
